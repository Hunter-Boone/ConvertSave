{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ConvertSave Dev",
  "version": "0.5.7",
  "identifier": "com.convertsave.dev",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "ConvertSave Dev",
        "width": 1000,
        "height": 1000,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "windows": {
        "installMode": "passive"
      },
      "endpoints": [
        "https://github.com/Hunter-Boone/ConvertSave/releases/download/dev/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDNDMjRBOUQ0NkJCNUZFMjgKUldRby9yVnIxS2trUEdjbDAySVdGaWFnUk9YRXZUb3pxWjhmMSsyTE1VTll0cnY3N2p0UTY1ck4K"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons-dev/32x32.png",
      "icons-dev/128x128.png",
      "icons-dev/256x256.png",
      "icons-dev/icon.icns",
      "icons-dev/icon.ico"
    ],
    "windows": {
      "nsis": {
        "displayLanguageSelector": false
      }
    }
  }
}
